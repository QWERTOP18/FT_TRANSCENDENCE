{
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"],
  "types": ["jest", "node"]
} 
